{# templates/event/payment.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Paiement pour l'événement
{% endblock %}

{% block body %}
	<h1>Paiement pour
		{{ event.title }}</h1>

	<form action="{{ path('event_register_payment', {'id': event.id}) }}" method="post" id="payment-form">
		<div class="form-row">
			<label for="card-element">
				Carte de crédit ou de débit
			</label>
			<div
				id="card-element"><!-- Stripe Element will be inserted here -->
			</div>

			<!-- Used to display form errors -->
			<div id="card-errors" role="alert"></div>
		</div>

		<button type="submit">Payer</button>
	</form>
{% endblock %}
